@page
@model WanyarCms.Pages.Admin.ArticleGroup.IndexModel
@{

}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست گروه های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateGroup" class="btn btn-outline btn-success">افزودن گروه جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عنوان گروه</th>
                                    <th>زیر گروه ها</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var group in Model.ArticleGroups.Where(g => g.parentId==null))
                                {
                                    <tr>
                                        <td>@group.groupTitle</td>
                                        <td>
                                            @if (group.ArticleGroups.Any())
                                            {
                                                <ul>
                                                    @foreach (var sub in group.ArticleGroups)
                                                    {
                                                        <li>
                                                            @sub.groupTitle -
                                                            <a href="/Admin/ArticleGroup/EditGroup/@sub.groupId" class="btn btn-outline btn-warning btn-xs">
                                                                ویرایش
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Admin/ArticleGroup/CreateGroup/@group.groupId" class="btn btn-info btn-sm">
                                                زیر گروه
                                            </a>
                                            <a href="/Admin/ArticleGroup/EditGroup/@group.groupId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>