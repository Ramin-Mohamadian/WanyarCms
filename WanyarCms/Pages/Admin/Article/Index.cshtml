@page
@model WanyarCms.Pages.Admin.Article.IndexModel
@{

}




<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کتاب های کتابخانه
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateArticle" class="btn btn-outline btn-success">افزودن کتاب جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>تصویر کتاب</th>
                                    <th>عنوان</th>
                                    <th>تعداد بازدید</th>
                                    <th>نمایش در اسلایدر</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var article in Model.listArticle)
                                {
                                    <tr>
                                        <th>
                                            <img class="thumbnail" style="max-width:150px;" src="/Picture/@article.ArticleImage" />
                                        </th>
                                        <th>
                                            @article.ArticleTitle
                                        </th>
                                        <th>
                                            @article.Visit
                                        </th>
                                        <th>
                                            @if (@article.ShowInSlider==true)
                                            {
                                                <p>فعال </p>
                                            }
                                            else
                                            {
                                               <p>غیر فعال</p> 
                                            }
                                        </th>
                                        <th>
                                            <a class="btn btn-warning form-control" asp-page="EditArticle" asp-route-id="@article.ArticleId">ویرایش </a>
                                            <p></p>
                                            <a class="btn btn-danger form-control" asp-page="DeleteArticle" asp-route-id="@article.ArticleId">حذف</a>

                                        </th>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>